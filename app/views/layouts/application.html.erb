<!DOCTYPE html>
<html ng-app="CdaApp">
<head>
  <title>Ministerio Internacional Casa del Alfarero .::. Oficial</title>
  <%= stylesheet_link_tag	'application' %> 
  
	<%= stylesheet_link_tag 'plugin/animate' %> 
	<%= stylesheet_link_tag 'plugin/prettyPhoto' %> 
	<%= stylesheet_link_tag 'plugin/main' %>  
  	<%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js' %>
  
  
  <%#= csrf_meta_tags %>
  <%= render partial: '/partials/google_analytics' %>
</head>
<body ng-controller="<%= params[:action].capitalize %>">
	<%= render partial: "/partials/header"%> 
  	<%= yield %> 
  	<%= render partial: "/partials/footer"%>
  	<%= javascript_include_tag "#{params[:controller]}/#{params[:action]}" if ::Rails.application.assets.find_asset("#{params[:controller]}/#{params[:action]}.js") %>
	<%= javascript_include_tag 'application'%> 
	<%= javascript_include_tag 'bootstrap'%> 
	<%= javascript_include_tag 'plugin/prettyPhoto'%>
	<%= javascript_include_tag 'plugin/isotope'%>
	<%= javascript_include_tag 'plugin/main'%>
	<%= javascript_include_tag 'plugin/wow'%>
</body>
</html>
